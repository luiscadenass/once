<div class="container">
  <div class="row flex-lg-nowrap">
    <div class="col-12 col-lg-auto mb-3" style="width: 200px;">
      <div class="card p-3">
        <div class="e-navlist e-navlist--active-bg">
          <ul class="nav">
              <li class="nav-item"><a class="nav-link px-2" href="/local"><i class="fa fa-fw fa-th mr-1"></i><span>CRUD</span></a></li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="row">
        <div class="col mb-3">
          <div class="card">
            <div class="card-body">
              <div class="e-profile">
                  {{#if danger}}
                  <div class="alert alert-danger" role="alert">
                      {{danger}}
                    <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">×</span>
                    </button>
                  </div>
                  {{/if}}   
                <h5 class="modal-title">Editar artículo</h5>

                <div class="tab-content pt-3">
                  <div class="tab-pane active">
                    <form class="form" action="/edit/{{products.id}}" method="POST">
                      <div class="row">
                        <div class="col">
                          <div class="row">
                            <div class="col">
                              <div class="form-group">
                                <label>Nombre del artículo</label>
                                <input class="form-control" type="text" name="product_name" value="{{products.product_name}}" maxlength="50" autocomplete="off">
                              </div>
                            </div>
                            <div class="col">
                              <div class="form-group">
                                <label>Cantidad del artículo</label>
                                <input class="form-control" type="text" name="product_quantity" value="{{products.product_quantity}}" maxlenght="10" autocomplete="off">
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col">
                              <div class="form-group">
                                <label>Presentación del artículo</label>
                                <input class="form-control" type="text" name="product_presentation" value="{{products.product_presentation}}" maxlength="150" autocomplete="off">
                              </div>
                            </div>
                          </div>
                          <div class="row">
                            <div class="col mb-3">
                              <div class="form-group">
                                <label>Descripción del artículo</label>
                                <textarea class="form-control" rows="5" name="product_description" placeholder="Descripción del artículo" maxlength="255"></textarea>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col d-flex justify-content-end">
                          <button class="btn btn-primary" type="submit">Guardar cambios</button>
                        </div>
                      </div>
                    </form>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
<div class="footer">
						PIZZAS LA ONCE 2022
</div>