<div class="container">
    <div class="row flex-lg-nowrap">
      <div class="col-12 col-lg-auto mb-3" style="width: 200px;">
        <div class="card p-3">
          <div class="e-navlist e-navlist--active-bg">
            <ul class="nav">
              <li class="nav-item"><a class="nav-link px-2" href="/local"><i class="fa fa-fw fa-th mr-1"></i><span>CRUD</span></a></li>
            </ul>
          </div>
        </div>
      </div>
    
      <div class="col">
        <div class="row flex-lg-nowrap">
          <div class="col mb-3">
            <div class="e-panel card">
              <div class="card-body">
                <div class="card-title">
                  <h6 class="mr-2"><span>INVENTARIO</span></h6>
                  {{#if success}}
                  <div class="alert alert-success" role="alert">
                      {{success}}
                    <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">×</span>
                    </button>
                  </div>
                  {{/if}}
                  {{#if danger}}
                  <div class="alert alert-danger" role="alert">
                      {{danger}}
                    <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">×</span>
                    </button>
                  </div>
                  {{/if}}
                </div>
                {{#each products}}
                <div class="e-table">
                  <div class="table-responsive table-lg mt-3">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Artículo</th>
                          <th>Descripción</th>
                          <th>Presentación</th>
                          <th>Cantidad</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        
                        <tr>
                          <td style="text-align:center;font-weight:bold;">{{id}}</td>
                          <td><span style="max-width: 150px;display:flex;text-align:justify;">{{product_name}}</span></td>
                          <td><span style="max-width: 200px;display:flex;text-align:justify;">{{product_description}}</span></td>
                          <td><span style="max-width: 200px;display:flex;text-align:justify;">{{product_presentation}}</span></td>
                          <td style="text-align:center;">{{product_quantity}}</td>
                          <td style="text-align:center;">
                            <div class="btn-group align-top">
                                <button class="btn btn-sm btn-outline-secondary badge" type="button" onclick="window.location.href='/edit/{{id}}'">Edit</button>
                                <button class="btn btn-sm btn-outline-secondary badge" type="button"  onclick="window.location.href='/delete/{{id}}'"><span class="fa fa-trash"></span></span></button>
                            </div>
                          </td>
                        </tr>
                        
                      </tbody>
                    </table>
                  </div>
                </div>
                {{else}}
                <div class="text-center px-xl-3">
                  <p>No existen artículos en existencia</p>
                      <button class="btn btn-success btn-block" type="button" data-toggle="modal" data-target="#add">INSERTA ALGUNO</button>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-3 mb-3">
            <div class="card">
              <div class="card-body">
                <div class="text-center px-xl-7">
                  <button class="btn btn-success btn-block" type="button" data-toggle="modal" data-target="#add">INSERTAR</button>
                </div>
              </div>
            </div>
          </div>
        </div>
    
        <!-- INSERTAR ARTÍCULOS -->
        <div class="modal fade" role="dialog" tabindex="-1" id="add">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Insertar artículo</h5>
                <button type="button" class="close" data-dismiss="modal">
                  <span aria-hidden="true">×</span>
                </button>
              </div>
              <div class="modal-body">
                 <div class="alert alert-info" role="alert">
                      Por favor no olvide llenar todos los campos!
                    <button type="button" class="close" data-dismiss="alert">
                    <span aria-hidden="true">×</span>
                    </button>
                  </div>
                <div class="py-1">
                  <form class="form" novalidate="" action="/local" method="POST">
                    <div class="row">
                      <div class="col">
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Nombre del artículo</label>
                              <input class="form-control" type="text" name="product_name" maxlength="50" autocomplete="off">
                            </div>
                          </div>
                          <div class="col">
                            <div class="form-group">
                              <label>Cantidad del artículo</label>
                              <input class="form-control" type="number" name="product_quantity" maxlength="10" autocomplete="off">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col">
                            <div class="form-group">
                              <label>Presentación del artículo</label>
                              <input class="form-control" type="text" name="product_presentation" maxlength="150" autocomplete="off">
                            </div>
                          </div>
                        </div>
                        <div class="row">
                          <div class="col mb-3">
                            <div class="form-group">
                              <label>Descripción del artículo</label>
                              <textarea class="form-control" rows="5" name="product_description" maxlength="255"></textarea>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">Insertar artículo</button>
                      </div>
                    </div>
                  </form>
    
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="footer">
						PIZZAS LA ONCE 2022
</div>